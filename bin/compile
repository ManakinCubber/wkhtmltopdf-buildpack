#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2

BIN_PATH="$BUILD_DIR/bin"
TMP_PATH="$BUILD_DIR/tmp"
mkdir -p $CACHE_DIR $BIN_PATH $TMP_PATH

WKHTMLTOPDF_URL="https://github.com/wkhtmltopdf/wkhtmltopdf/releases/download/0.12.5/wkhtmltox_0.12.5-1.bionic_amd64.deb"
WKHTMLTOPDF_DEB="$CACHE_DIR/wkhtmltox.deb"
WKHTMLTOPDF_PATH="$TMP_PATH/wkhtmltox"

BIN_DIR=$(cd $(dirname $0); pwd)

echo "-----> Downloading wkhtmltopdf.deb"
curl -L $WKHTMLTOPDF_URL -o $WKHTMLTOPDF_DEB
dpkg -i $WKHTMLTOPDF_DEB
rm $WKHTMLTOPDF_DEB
